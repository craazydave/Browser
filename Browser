import javax.swing.*;

import java.awt.event.*;
import java.awt.*;
import java.net.*;
import java.io.*;

public class Browser extends JFrame
{
	private JTextField textfield = new JTextField();
	private JScrollPane scrollarea;
	private JTextArea textarea = new JTextArea();
	
	public Browser()
	{
		add(textfield, BorderLayout.PAGE_START);
		scrollarea = new JScrollPane(textarea);
		add(scrollarea, BorderLayout.CENTER);
		
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		
		setSize(640, 480);
		setVisible(true);
		
		textfield.addActionListener(new HTMLListener());
	}
	
	public JTextField getTextField()
	{
		return textfield;
	}
	
	public static void main(String [] args)
	{
		new Browser();
	}
	
	public class HTMLListener implements ActionListener
	{
		public void actionPerformed(ActionEvent ae)
		{
			String field = Browser.this.textfield.getText();
			
			StringBuffer buffer = new StringBuffer();
			String line = "";
			
			try 
			{
				URL url = new URL(field);
				BufferedReader br = new BufferedReader(new InputStreamReader(url.openStream()));
				
				while((line = br.readLine()) != null)
				{
					buffer.append(line + "\n");
				}
				
				Browser.this.textarea.setText(buffer.toString());
			} 
			catch (IOException e){}
			
		}
	}
}
